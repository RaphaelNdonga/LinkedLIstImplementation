<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/queue_recycler_view"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/list_item_person"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/addFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/queue_recycler_view" />

    <Button
        android:id="@+id/removeFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove First"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addFirst" />

    <Button
        android:id="@+id/addLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Last"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/queue_recycler_view" />

    <Button
        android:id="@+id/removeLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Last"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addLast" />

    <Button
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First"
        app:layout_constraintBottom_toTopOf="@+id/queue_recycler_view"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last"
        app:layout_constraintBottom_toTopOf="@+id/queue_recycler_view"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/isEmpty"
        app:layout_constraintStart_toStartOf="@+id/isEmpty"
        app:layout_constraintTop_toBottomOf="@+id/queue_recycler_view" />

    <Button
        android:id="@+id/isEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="is Empty"
        app:layout_constraintBottom_toTopOf="@+id/queue_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>